<%- include("header",{type:'createpage'}) %>
    <div class="container">
        <form style="width:100%" method="post" class="form create">
            <div>
                <label>标题：</label>
                <input placeholder="请输入标题" type="text" name="title">
            </div>
            <div>
                <label>链接（例如 xxx.com/s/about 填写about即可）：</label><br /> 
                <input type="text" name="linkname">
            </div>
            <div>
                <label>内容：</label>
                <textarea placeholder="请输入内容" name="content" id="" cols="42" rows="10"></textarea>
            </div>
            <div>
                <input type="radio" name="hascom" value="true" checked>开启评论
                <input type="radio" name="hascom" value="false">关闭评论
            </div>
            <div class="submit">发表</div>
        </form>
    </div>
    <script>
        $('.submit').click(() => {
            if ($('input[name=title]').val().trim() == '') {
                fade('请输入标题')
            } else if ($('input[name=linkname]').val().trim() == '') {
                fade('请输入链接')
            } else if ($('textarea[name=content]').val().trim() == '') {
                fade('请输入内容')
            } else {
                $.ajax({
                    url: "/createpage",
                    data: $('.form').serialize(),
                    type: "POST",
                    cache: false,
                    dataType: 'json',
                    success: function (msg) {
                        if (msg) {
                            fade('发表成功')
                            setTimeout(() => {
                                window.location.href = "/"
                            }, 1000)
                        } else {
                            fade('发表失败')
                        }
                    },
                    error: function () {
                        fade('服务器异常')
                    }
                })
            }
        })
    </script>
    <%- include("footer",{type:'all'}) %>